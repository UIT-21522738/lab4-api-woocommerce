

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Information</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }
        .container {
            width: 80%;
            margin: 20px auto;
            background: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 12px;
            text-align: left;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        .form-container {
            background: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
        }
        .form-container h2 {
            margin-bottom: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
        }
        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        .form-group button {
            background: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background 0.3s;
        }
        .form-group button:hover {
            background: #45a049;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>User Information</h1>
        <table>
            
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Username</th>
                    <th>Email</th>
                </tr>
            </thead>
            {{#each customers}}
            <tbody>
                <tr>
                    <td>{{id}}</td>
                    <td>{{first_name}} {{last_name}}</td>
                    <td>{{username}}</td>
                    <td>{{email}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <div class="form-container">
            <h2>Register New User</h2>
            <form action="/users/create" method="post">
                <div class="form-group">
                    <label for="">first name</label>
                <input type="text" name="first_name" required>
                </div>
                <div class="form-group">
                    <label for="">last name</label>
                <input type="text" name="last_name" required>
                </div>
                <div class="form-group">
                    <label for="">username</label>
                <input type="text" name="username" required>
                </div>
                <div class="form-group">
                    <label for="">email</label>
                    <input type="email" name="email">
                </div>
                <div class="form-group">
                    <label for="">password</label>
                    <input type="password" name="password">
                </div>
                <div class="form-group">
                    <button type="submit">Register</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>



